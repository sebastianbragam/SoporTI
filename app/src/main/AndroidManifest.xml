<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.saltapor.soporti">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SoporTI">
        <activity
            android:name=".EditCategoryActivity"
            android:exported="false" />
        <activity
            android:name=".CategoriesActivity"
            android:label="@string/categories"
            android:parentActivityName=".CategoriesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CategoriesActivity" />
        </activity>
        <activity
            android:name=".NewCategoryActivity"
            android:label="@string/new_category"
            android:parentActivityName=".CategoriesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CategoriesActivity" />
        </activity>
        <activity
            android:name=".NewTicketActivity"
            android:label="@string/add"
            android:parentActivityName=".TicketsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TicketsActivity" />
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/register_user"
            android:parentActivityName=".TicketsActivity" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/login" />
        <activity
            android:name=".TicketsActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>